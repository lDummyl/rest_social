<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config></context:annotation-config>
    <!-- this ^ includes hidden Pack of PostProcessors-->
    <!--<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

    <bean class="com.example.demo.SpringAddAnotations.PostProxyInvokerContextListener"/>
    <bean class="com.example.demo.SpringAddAnotations.ProfilingHandlerBeanPostProcessor"/>
    <bean class="com.example.demo.SpringAddAnotations.InjectRandomIntBeanPostProcessor"/>

    <bean class="com.example.demo.SpringAddAnotations.TerminatorQuoter" id="terminatorQuoter">
        <property name="message" value="I'll be back"/>
    </bean>

</beans>